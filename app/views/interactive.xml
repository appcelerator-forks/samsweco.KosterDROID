<Alloy>
	<Collection src="hotspotModel" />
	<Collection src="trailsModel" />
	<Collection src="jsonFilesModel" />
	<Collection src="hotspot_trailsModel" />
	<Collection src="letterModel" />
	<Model src="letterModel" />
	<Model src="foundLettersModel" />
	<Collection src="foundLettersModel" />
	<Collection src="infospotCoordinatesModel" />
	
	<ScrollView id="interactiveWin">
			<View id="showFamilyTrail"></View>
			<View id="hideView" class="view">
				<Label id="lblWelcome" text="Välkommen till bokstavsjakten!"></Label>
				<Label id="lblInfoText"></Label>
				<Button id="btnStartQuiz" onClick="startInteractive">Starta bokstavsjakten!</Button>
				
				<View id="horizontalView" class="view">
					<TextField id="txtLetter" hintText="Skriv bokstaven här..."></TextField>
					<Button id="lblLetters" onClick="sendLetter">Skicka bokstav!</Button>
				</View>
				
				<Label id="lblCollectedLetters" text="Bokstäver: "></Label>
				
				<View id="wordView">
					<TextField id="txtWord" hintText="Skriv ordet här..."></TextField>
					<Label id="lblWord" onClick="checkWord" text="Skicka ord!"></Label>
				</View>
				
				<View id="viewNext">
					<Label id="lblnextClue">Hittar du ingen bokstav?</Label>
					<Button id="nextClue" onClick="toNextClue">Klicka här för att gå till nästa ledtråd.</Button>
				</View>
			</View>
		</ScrollView>
</Alloy>
